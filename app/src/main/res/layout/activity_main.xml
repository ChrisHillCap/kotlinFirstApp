<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity">
    <Button
            android:text="View all information on car"
            android:layout_width="132dp"
            android:layout_height="73dp"
            android:id="@+id/getInfo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp" android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/carId" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.232"
            app:layout_constraintStart_toEndOf="@+id/getCar" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.829"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/imageView"
            android:contextClickable="false"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="72dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Get Car From Api"
            android:layout_width="142dp"
            android:layout_height="74dp"
            android:id="@+id/getCar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" app:layout_constraintEnd_toStartOf="@+id/button"
            android:layout_marginEnd="8dp" android:layout_marginTop="124dp"
            app:layout_constraintTop_toBottomOf="@+id/carId" app:layout_constraintHorizontal_bias="0.493"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.24"/>
    <TextView
            android:text="Example car id here"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:ems="10"
            android:id="@+id/carId"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.502"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example car model here"
            android:ems="10"
            android:id="@+id/carModel" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/carId" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/getInfo"/>
</android.support.constraint.ConstraintLayout>