<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity" android:textAlignment="center" android:contextClickable="false">
    <Button
            android:text="View all information on sample car"
            android:layout_width="161dp"
            android:layout_height="144dp"
            android:id="@+id/getInfo"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/imageView"
            android:contextClickable="false"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.501" android:layout_marginTop="144dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Get sample Car From Api"
            android:layout_width="163dp"
            android:layout_height="145dp"
            android:id="@+id/getCar"

            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            app:layout_constraintEnd_toStartOf="@+id/getInfo"
            android:layout_marginEnd="36dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.962"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.992"/>
    <TextView
            android:text="Example car id here"
            android:layout_width="192dp"
            android:layout_height="35dp"
            android:ems="10"
            android:id="@+id/carId"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.507"
            android:textSize="24sp"/>
    <TextView
            android:layout_width="189dp"
            android:layout_height="63dp"
            android:text="Example car model here"
            android:ems="10"
            android:id="@+id/carModel"
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/carId" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Main Api funtionality"
            android:layout_width="348dp"
            android:layout_height="38dp"
            android:id="@+id/mainAPI" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/getCar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/carModel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>