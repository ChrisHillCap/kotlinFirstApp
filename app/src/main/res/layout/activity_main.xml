<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity">
    <Button
            android:text="WizzBang"
            android:layout_width="97dp"
            android:layout_height="63dp"
            android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" android:layout_marginTop="136dp"
            app:layout_constraintTop_toBottomOf="@+id/carId"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[14]"
            android:id="@+id/imageView"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:contextClickable="false"/>
    <Button
            android:text="Get Car From Api"
            android:layout_width="135dp"
            android:layout_height="65dp"
            android:id="@+id/getCar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/button"
            android:layout_marginEnd="8dp" android:layout_marginTop="140dp"
            app:layout_constraintTop_toBottomOf="@+id/carId" app:layout_constraintHorizontal_bias="0.494"/>
    <TextView
            android:text="car id here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/carId"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="108dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="205dp" android:id="@+id/text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/carId" android:includeFontPadding="true"
            android:textSize="20sp" app:layout_constraintVertical_bias="0.754"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="car model here"
            android:ems="10"
            android:id="@+id/carModel" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/carId" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/getCar"/>
</android.support.constraint.ConstraintLayout>